.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Project name
    .navbar-collapse.collapse

      if user
        ul(class="nav navbar-nav navbar-right")
          li
            a(href="#") Bienvenido #{user.email}
          li
            a(href="/logout")
              i(class="glyphicon glyphicon-off") Logout


      else
        form.navbar-form.navbar-right(role='form', action="/login", method="post")
          .form-group
            input.form-control(type='text', name="email", placeholder='Email')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          button.btn.btn-success(type='submit') Sign in

      //
        /.navbar-collapse
